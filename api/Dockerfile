
FROM node
ENV OPENAI_API_KEY=${OPENAI_API_KEY}
ENV REDIS_URL=${REDIS_URL}
ENV DATABASE_URL=${DATABASE_URL}
ENV PORT=${PORT}
ENV CORS_ORIGIN=${CORS_ORIGIN}
ENV FIREBASE_PROJECT_ID=${FIREBASE_PROJECT_ID}

WORKDIR /app

# Install dependencies
COPY package*.json ./
RUN npm ci --omit=dev

# Copy source code
COPY . .

EXPOSE 3000
CMD ["npm", "run", "start"]
