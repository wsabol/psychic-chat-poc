{
  "name": "StarshipPsychicsMobile",
  "displayName": "Starship Psychics",
  "description": "Connect with psychic readers for guidance and insights",
  "version": "1.0.0",
  "orientation": "portrait",
  "icon": "./assets/icon.png",
  "splash": {
    "image": "./assets/splash.png",
    "resizeMode": "contain",
    "backgroundColor": "#0f0f1e"
  },
  "ios": {
    "bundleIdentifier": "com.starshippsychics.mobile",
    "buildNumber": "1.0.0",
    "supportsTablet": false,
    "infoPlist": {
      "UIBackgroundModes": ["remote-notification"],
      "NSCameraUsageDescription": "Allow Starship Psychics to access your camera for profile photos.",
      "NSPhotoLibraryUsageDescription": "Allow Starship Psychics to access your photos for profile pictures."
    }
  },
  "android": {
    "package": "com.starshippsychics.mobile",
    "versionCode": 1,
    "adaptiveIcon": {
      "foregroundImage": "./assets/adaptive-icon.png",
      "backgroundColor": "#0f0f1e"
    },
    "permissions": [
      "INTERNET",
      "ACCESS_NETWORK_STATE",
      "RECEIVE_BOOT_COMPLETED",
      "VIBRATE"
    ]
  }
}
